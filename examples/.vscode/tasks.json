{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_all_tests",
            "command": "bazel build -c dbg //...",
            "osx": {
                "command": "bazel build -c dbg --linkopt=\"-Wl,-oso_prefix .\" --copt=-fdebug-compilation-dir=${workspaceFolder} //..."
            },
            "type": "shell",
            "group": "build"
        },
        {
            "label": "refresh_compile_commands",
            "type": "shell",
            "command": "bazel run @hedron_compile_commands//:refresh_all -- --compilation_mode=dbg",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cleanup_cucumber_debug_socket",
            "type": "shell",
            "command": "rm -f /tmp/cucumber-debug.sock",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "prepare_cucumber_debug",
            "dependsOn": [
                "build_all_tests",
                "cleanup_cucumber_debug_socket"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "run_cucumber_debug_script",
            "type": "shell",
            "command": "${workspaceFolder}/tools/cucumber/debugging/run_cucumber_debug.sh",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOrder": "sequence"
        },
        {
            "label": "Run Cucumber Debug (DataFile)",
            "type": "shell",
            "command": "./tools/cucumber/debugging/run_cucumber_debug.sh datafile_test",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false,
                "close": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Running Cucumber in debug mode$",
                    "endsPattern": "^Waiting for socket to be available\\.\\.\\.$"
                }
            }
        },
        {
            "label": "Run Cucumber Debug (Calculator)",
            "type": "shell",
            "command": "./tools/cucumber/debugging/run_cucumber_debug.sh calc_test",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false,
                "close": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Running Cucumber in debug mode$",
                    "endsPattern": "^Waiting for socket to be available\\.\\.\\.$"
                }
            }
        }
    ]
}